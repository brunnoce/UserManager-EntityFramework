@model RegisterViewModel
@using WebAppEFCore.Models

@{
    ViewData["Title"] = "Register";
}

<div class="container-register d-flex justify-content-center align-items-center min-vh-100 layout-background">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h2 class="text-center mb-4 text-primary">Registrar Nuevo Usuario</h2>

                    <form asp-action="Register" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar Contraseña" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input type="submit" value="Registrar" class="btn btn-primary w-100 register-btn" />
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/Account/Login" class="text-muted">¿Ya tienes cuenta? Inicia sesión aquí.</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>