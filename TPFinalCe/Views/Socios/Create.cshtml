@model TPFinalCe.Models.Socio

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/Estilos.css" rel="stylesheet" />


<div class="contenedor-principal">
    <h1 class="h1-titulo">Crear Socio</h1>
    <div class="contenedor-secundario">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label"></label>
                <input asp-for="FechaNacimiento" class="form-control" type="date"/>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="FechaAlta" class="control-label"></label>
                <input asp-for="FechaAlta" class="form-control" />
                <span asp-validation-for="FechaAlta" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="DisciplinaId" class="control-label"> Disciplina</label>
                <select asp-for="DisciplinaId" class ="form-control" asp-items="ViewBag.DisciplinaId"></select>
            </div>
            @* <div class="form-group">
                <label asp-for="EstadoId" class="control-label"></label>
                <select asp-for="EstadoId" class ="form-control" asp-items="ViewBag.EstadoId"></select>
            </div> *@
            @* <div class="form-group">
                <label asp-for="Beneficios" class="control-label"></label>
                <input asp-for="Beneficios" class="form-control" />
                <span asp-validation-for="Beneficios" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <img src="@(Model != null && !string.IsNullOrEmpty(Model.Foto) ? Url.Content("~/images/socios/" + Model.Foto) : "https://via.placeholder.com/150")"
                     alt="Imagen de Socio" id="imagen" class="rounded-circle" width="60" />
                <br />
                <label asp-for="Foto" class="control-label">Seleccione su imagen...</label>
                <input asp-for="Foto" class="form-control" type="file" accept="image/*" id="seleccionImg" />
            </div>
            <div class="contenedor-volver-crear">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a class="btn-volver" asp-action="Index">Volver</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/js/cargarfoto.js"></script>