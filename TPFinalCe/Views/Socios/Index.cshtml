@model IEnumerable<TPFinalCe.Models.Socio>

@{
	ViewData["Title"] = "Index";
}
<link href="~/css/Estilos.css" rel="stylesheet" />

<h1 class="h1-titulo">Socios</h1>

<div class="div-btn-create">
	<a class="btn-create-index" asp-action="Create">👉​ Agregar nuevo socio</a>
</div>

<form asp-action="Index" method="get" class="filtrado">
	<p class="filtros"> <b>Nombre:</b> <input type="text" name="busquedaNombre" /></p>
	<p class="filtros"> <b>Disciplina:</b> <select name="disciplinaId" asp-items="ViewBag.DisciplinaId"><option value="">Todas</option></select></p>
	<p class="filtros"> <b>Estado:</b><select name="estadoId" asp-items="ViewBag.EstadoId"><option value="">Todos</option></select></p>
	<input class="btn-filtrar" type="submit" value="Filtrar" />
</form>

<table class="table">
	<thead>
		<tr>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.Apellido)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.DNI)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.FechaNacimiento)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.Foto)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.FechaAlta)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.Disciplina.Foto)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.Estado)
			</th>
			<th class="fila-identificadores">
				@Html.DisplayNameFor(model => model.Beneficios)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="tabla">
				<td class="fila-tabla">
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Apellido)
				</td>
				<td class="fila-tabla">
					@Html.DisplayFor(modelItem => item.DNI)
				</td>
				<td class="fila-tabla">
					@Html.DisplayFor(modelItem => item.FechaNacimiento)
				</td>
				<td class="fila-tabla">
					@if (!string.IsNullOrEmpty(@item.Foto))
					{
						<img src="~/images/socios/@item.Foto" width="60"
							 class="rounded-circle" asp-append-version="true" />
					}
				</td>
				<td class="fila-tabla">
					@Html.DisplayFor(modelItem => item.FechaAlta)
				</td>
				<td class="fila-tabla">
					@if (!string.IsNullOrEmpty(@item.Disciplina.Foto))
					{
						<img class="imagen-disciplina" src="~/images/disciplinas/@item.Disciplina.Foto" width="60"
							 class="rounded-circle" asp-append-version="true" />
					}
				</td>
				<td class="fila-tabla">
					@Html.DisplayFor(modelItem => item.Estado.Descripcion)
				</td>
				<td class="fila-tabla">
					@Html.DisplayFor(modelItem => item.Beneficios.Descripcion)
				</td>
				<td class="fila-tabla">
					<a class="btn-editar" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
					<a class="btn-detalles" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
					<a class="btn-eliminar" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
